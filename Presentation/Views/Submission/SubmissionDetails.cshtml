
@{
    ViewBag.Title = "SubmissionDetails";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@using ViewModels
@model SubmissionViewModel
<div class="container w75">


    <div class="card">
    <div class="container">

        <div class="row">
            <div class="col-1">
                <div class="btn-group-vertical container-fluid">
                    <form method="post" action="" class="btn">
                        <input type="image" class="img-fluid" src="~/Static/upvote-unpressed.png" alt="Upvote" />
                        <input type="image" class="img-fluid" src="~/Static/downvote-unpressed.png" alt="Downvote" />
                    </form>
                </div>
            </div>
            <div class="col">
                <h5 class="card-title">@Model.Title</h5>
                <h7 class="card-subtitle">Submitted by @Model.AuthorName</h7>
                <h7 class="card-subtitle">Comments:</h7>
                <div class="expanded-content border border-primary rounded" >
                <p class="expanded-content-text">@Model.Content</p></div>
            </div>
        </div>
    </div>

</div>

    
</div>
